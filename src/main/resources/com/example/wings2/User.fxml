<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300" prefWidth="400" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.wings2.UserController">
    <children>
        <Label layoutX="20" layoutY="20" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="User Login" />
        <Label layoutX="20" layoutY="80" text="Username:" />
        <TextField fx:id="usernameField" layoutX="100" layoutY="80" promptText="Enter Username" />
        <Label layoutX="20" layoutY="120" text="Password:" />
        <PasswordField fx:id="passwordField" layoutX="100" layoutY="120" promptText="Enter Password" />
        <Button fx:id="loginButton" layoutX="100" layoutY="160" text="Login" onAction="#handleLogin" />
        <Label fx:id="statusLabel" layoutX="20" layoutY="200" textFill="red" />
    </children>
</AnchorPane>